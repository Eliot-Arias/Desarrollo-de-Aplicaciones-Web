CREATE DATABASE RESTAURANTDB;
USE RESTAURANTDB;
CREATE TABLE PLATO(
    ID_PLATO INT PRIMARY KEY AUTO_INCREMENT,
    NOMBRE VARCHAR(30),
    CANTIDAD INT,
    MONTO DOUBLE,
);
CREATE TABLE INSUMOS(
    ID_INSUMO INT PRIMARY KEY AUTO_INCREMENT,
    NOMBRE VARCHAR(30),
    CANTIDAD INT,
    UNIDAD VARCHAR(30),
    ID_PLATO INT
);
